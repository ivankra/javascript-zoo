+static v3_base_object_t *host_print(v3_ctx_t *ctx)
+{
+    v3_object_t *args;
+    v3_number_object_t *len;
+    size_t i;
+    char key[32];
+
+    args = to_obj(v3_object_get(to_obj(ctx->frame->call_obj), v3_strobj("arguments")));
+    len = args ? to_number(v3_object_get(args, v3_strobj("length"))) : NULL;
+
+    for (i = 0; len && i < (size_t) len->value; i++) {
+        int n = snprintf(key, sizeof(key), "%zu", i);
+        v3_base_object_t *arg;
+        v3_string_object_t *s;
+        if (n <= 0 || (size_t) n >= sizeof(key)) continue;
+        arg = v3_object_get_by_str(args, key, (size_t) n);
+        s = arg ? v3_to_string(ctx, arg) : NULL;
+        if (i) fputc(' ', stdout);
+        if (s) fwrite(to_string(s)->value.data, 1, to_string(s)->value.length, stdout);
+        else fputs("undefined", stdout);
+    }
+    fputc('\n', stdout);
+    return to_base(&v3_undefined);
+}
+
+static char *read_file(const char *path) {
+  FILE *fp = fopen(path, "rb");
+  if (!fp) return NULL;
+
+  size_t size = 0, cap = 4096, num;
+  char *buf = (char *)malloc(cap);
+  if (!buf) {
+    fclose(fp);
+    return NULL;
+  }
+
+  while ((num = fread(buf + size, 1, cap - 1 - size, fp)) > 0) {
+    if ((size += num) >= cap - 1) {
+      char *newbuf = (char *)realloc(buf, cap *= 2);
+      if (!newbuf) {
+        free(buf);
+        fclose(fp);
+        return NULL;
+      }
+      buf = newbuf;
+    }
+  }
+  fclose(fp);
+  buf[size] = 0;
+
+  return buf;
+}
