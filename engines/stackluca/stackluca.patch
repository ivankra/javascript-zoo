+    log_fn = v3_function_create_native(ctx, v3_strobj("log"), v3_numobj(1), host_print);
+    if (log_fn == NULL) return V3_ERROR;
+    v3_obj_set(console, v3_strobj("log"), log_fn);
+    v3_obj_set(ctx->global, v3_strobj("console"), console);
+    return V3_OK;
+}
