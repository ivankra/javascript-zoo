+#include "stdafx.h"
+#include "osx/StopWatch_osx.h"
+#include <sys/time.h>
+
+namespace cri {
+
+void CStopWatch::Start() {
+  if (m_bStarted) return;
+  timeval tv;
+  gettimeofday(&tv, 0);
+  m_liStart = static_cast<uint64_t>(tv.tv_sec) * 1000000ULL + static_cast<uint64_t>(tv.tv_usec);
+  m_bStarted = true;
+}
+
+void CStopWatch::Stop() {
+  if (!m_bStarted) return;
+  timeval tv;
+  gettimeofday(&tv, 0);
+  m_liEnd = static_cast<uint64_t>(tv.tv_sec) * 1000000ULL + static_cast<uint64_t>(tv.tv_usec);
+  m_bStarted = false;
+  m_liDuration += (m_liEnd - m_liStart);
+}
+
+void CStopWatch::Reset() {
+  m_liStart = 0;
+  m_liEnd = 0;
+  m_liDuration = 0;
+  m_bStarted = false;
+}
+
+float CStopWatch::getResult() {
+  return static_cast<float>(m_liDuration / 1000000.0);
+}
+
+}  // namespace cri
