@@ -0,0 +1,41 @@
+SHELL := /bin/bash
+
+CXX ?= g++
+AR ?= ar
+
+OBJDIR ?= /tmp/obj
+LIBDIR ?= /tmp/lib
+BINDIR ?= /tmp/bin
+
+CXXFLAGS ?= -O2 -std=gnu++03 -fpermissive -w -include string.h -D__APPLE__ -DBOOST_REGEX_NO_LIB -DBOOST_NO_EXCEPTIONS
+CPPFLAGS ?= -Iinc -Isrc/boost -Isrc/Parser -Isrc/CodeGen -Isrc/VM -Itools/cscl
+LDFLAGS ?= -Wl,--allow-multiple-definition
+
+LIB := $(LIBDIR)/libcriscript.a
+BIN := $(BINDIR)/cscl
+
+CORE_SRCS := $(shell find src/BuiltInObject src/CodeGen src/Debugger src/Parser src/VM/cil -name '*.cpp' | sort)
+BOOST_SRCS := $(shell find src/boost/libs/regex/src -name '*.cpp' | sort | grep -Ev '/(icu|w32_regex_traits|xbox360_regex_traits)\.cpp$$')
+LOCAL_SRCS := criscript_linux_stopwatch.cpp
+SRCS := $(CORE_SRCS) $(BOOST_SRCS) $(LOCAL_SRCS)
+
+OBJS := $(addprefix $(OBJDIR)/,$(addsuffix .o,$(SRCS)))
+
+.PHONY: all clean
+
+all: $(BIN)
+
+$(BIN): tools/cscl/stdafx.cpp tools/cscl/cscl.cpp $(LIB)
+	@mkdir -p "$(BINDIR)"
+	$(CXX) $(CXXFLAGS) $(CPPFLAGS) $^ -o "$@" $(LDFLAGS)
+
+$(LIB): $(OBJS)
+	@mkdir -p "$(LIBDIR)"
+	$(AR) rcs "$@" $(OBJS)
+
+$(OBJDIR)/%.cpp.o: %.cpp
+	@mkdir -p "$(dir $@)"
+	$(CXX) $(CXXFLAGS) $(CPPFLAGS) -c "$<" -o "$@"
+
+clean:
+	rm -rf "$(OBJDIR)" "$(LIBDIR)" "$(BINDIR)"
